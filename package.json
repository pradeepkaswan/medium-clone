{
  "name": "medium-clone",
  "version": "1.0.0",
  "description": "A Medium clone built with React, Node, Express, and MongoDB.",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "start:dev": "nodemon server/server.js",
    "server": "npm run install && npm run start",
    "client": "cd client && npm install && npm run dev",
    "client-build": "cd client && npm run build",
    "dev": "concurrently \"npm run start:dev\" \"npm run client\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "nanoid": "^5.0.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
